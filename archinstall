1# Setup Wifi
iwctl
station wlan0 scan
station wlan0 connect 'wifi name'
type password and enter
ping google.com to see if internet work

2# Create Disk Partitions
lsblk to see disks
gdisk /dev/nvme0n1 "nvme0n1" is the disk where i want create partitions and install arch

/efi
o for clean disk
n for create first partition
enter
enter
+128M
ef00

/root
n for next partition
enter
enter
enter
enter

w add created partitions
y yes

#3 Format partitions

/efi
mkfs.vfat -F32 /dev/nvme0n1p1

/root
mkfs.ext4 /dev/nvme0n1p2

#4 Mount partitions

/root
mount /dev/nvme0n1p2 /mnt

/efi
mkdir -p /mnt/efi
mount -o noatime /dev/nvme0n1p1 /mnt/efi

#5 Install
pacstrap /mnt base grub-efi-x86_64 efibootmgr os-prober amd-ucode linux linux-headers linux-firmware bash-completion inetutils usbutils nvme-cli nano htop

#6 Create fstab
genfstab -pU /mnt >> /mnt/etc/fstab

#7 Chroot
arch-chroot /mnt /bin/bash

#8 Install grub
grub-install --target=x86_64-efi --efi-directory=/efi --bootloader-id=GRUB

#9 Generate grub.cfg
grub-mkconfig -o /boot/grub/grub.cfg

#10 Check efi enteries
efibootmgr

#11 Set Locale to pl_PL.UTF-8 + Time + Hwclock nano /etc/locale.gen
